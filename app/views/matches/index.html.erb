<div class="row" style="padding-top: 160px;>
  <div class="col"> </div>
    <div class="col-sm-12" style="margin-left: 10px;">

      <%= will_paginate @matches, previous_label: "<", next_label: ">" %>

        <div class="col-sm-12">

            <h2>List of matches: </h2>

              <% if current_user && current_user.admin? %>

            <p>
              <%= link_to "Add new match", new_match_path, class: 'btn btn-lg btn-info' %>
            </p>

              <% end %>
        
            <div class="row" style="margin-left: auto; margin-right: auto margin-bottom: 100px;">

                <% @matches.each do |match| %>

                  <div class="col-sm-4" style="padding: 10px;">
                    <div class="card"> 
                      <div class="card-block">

                        <h5 class="card-title">
                          <%= match.home&.name %> - <%= match.quest&.name %> <%= match.score_team_A_match %> : <%= match.score_team_B_match %>
                        </h5>

                            <%= link_to 'More', match_path(match), class: 'btn btn-sm btn-info'%>

                          <% if current_user && current_user.admin? %>

                            <%= link_to 'Edit', edit_match_path(match), class: 'btn btn-sm btn-warning' %>
                            <%= link_to 'Delete', match_path(match), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>

                          <% end %>

                      </div>
                    </div>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
  <div class="col"> </div>
</div>
