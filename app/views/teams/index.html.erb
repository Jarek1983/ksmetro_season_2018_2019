<div class="row">
  <div class="col"> </div>

    <div class="col-sm-12" style="margin-left: 0.75rem;">

      <%= will_paginate @teams, previous_label: "<", next_label: ">" %>

        <div class="col-sm-12">

            <h2>List of teams: </h2>

              <% if current_user && current_user.admin? %>

            <p>
              <%= link_to "Add new team", new_team_path, class: 'btn btn-lg btn-info' %>
            </p>

            <% end %>
        
          <div class="row" style="margin-left: auto; margin-right: auto;">

              <% @teams.each do |team| %>

            <div class="col-12 col-sm-6 col-md-4" style="padding: 1rem;">
              <div class="card2"> 
                <div class="card-topper2">

                  <% if team.image.present? %>

                    <%= link_to image_tag(team.image.url, :alt => "Team", class: "teams"), team_path(team) %>
                    

                  <% else %>

                    No image

                  <% end %>

                </div>

                <div class="card-block">

                      <%= link_to 'More', team_path(team), class: 'btn btn-sm btn-info'%>

                    <% if current_user && current_user.admin? %>

                      <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-sm btn-warning' %>
                      <%= link_to 'Delete', team_path(team), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>

                    <% end %>

                </div>
              </div>
            </div>
              <% end %>
          </div>
        </div>
    </div>
</div>